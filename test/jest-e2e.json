{
  "moduleFileExtensions": ["ts", "tsx", "js", "json"],
  "rootDir": ".",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "/test/.*\\.(e2e-test|e2e-spec).(ts|tsx|js)$",
  "collectCoverageFrom": ["src/**/*.{js,jsx,tsx,ts}"],
  "coverageReporters": ["json", "lcov"]
}
